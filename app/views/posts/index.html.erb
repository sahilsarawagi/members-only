<% if user_signed_in? %> 
 <div> Welcome <%= current_user.username %> </div> 
  <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
<% else %>
  <%= button_to "Sign in", new_user_session_path %> 
<% end %>

<%= link_to "Create your posts", "posts/new" %>
<h1>All Posts</h1>

<div> <% @posts.each do |post| %> </div>

<h1><%= post.title %></h1>

<p><%= post.body %></p>
<% if user_signed_in? %>
<p>-<%= post.user.username %></p>
<% else %>
<p>-Anonymous user</p>
<% end %>
<% end %>

